@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<FPTBook.Models.Book>

@section Stylesheets {
    <style>
        .thumb-wrapper {
            padding: 25px 15px;
            background: #fff;
            border-radius: 6px;
            text-align: center;
            position: relative;
            box-shadow: 0 2px 3px rgba(0,0,0,0.2);
        }

        .item .img-box {
            height: 120px;
            margin-bottom: 20px;
            width: 100%;
            position: relative;
        }

        .item img {
            max-width: 100%;
            max-height: 100%;
            display: inline-block;
            position: absolute;
            bottom: 0;
            margin: 0 auto;
            left: 0;
            right: 0;
        }

        .item h4 {
            font-size: 18px;
        }

        .item h4, .item p, .item ul {
            margin-bottom: 5px;
        }

        .thumb-content .btn {
            color: #eb4800;
            font-size: 11px;
            text-transform: uppercase;
            font-weight: bold;
            background: none;
            border: 1px solid #eb4800;
            padding: 6px 14px;
            margin-top: 5px;
            line-height: 16px;
            border-radius: 20px;
        }

            .thumb-content .btn:hover, .thumb-content .btn:focus {
                color: #fff;
                background: #eb4800;
                box-shadow: none;
            }

            .thumb-content .btn i {
                font-size: 14px;
                font-weight: bold;
                margin-left: 5px;
            }

        .item-price {
            font-size: 13px;
            padding: 2px 0;
        }

            .item-price strike {
                opacity: 0.7;
                margin-right: 5px;
            }

        .carousel-control-prev, .carousel-control-next {
            height: 44px;
            width: 40px;
            background: #eb4800;
            margin: auto 0;
            border-radius: 4px;
            opacity: 0.8;
        }

            .carousel-control-prev:hover, .carousel-control-next:hover {
                background: #eb4800;
                opacity: 1;
            }

            .carousel-control-prev i, .carousel-control-next i {
                font-size: 36px;
                position: absolute;
                top: 50%;
                display: inline-block;
                margin: -19px 0 0 0;
                z-index: 5;
                left: 0;
                right: 0;
                color: #fff;
                text-shadow: none;
                font-weight: bold;
            }

            .carousel-control-prev i {
                margin-left: -2px;
            }

            .carousel-control-next i {
                margin-right: -4px;
            }

        .carousel-indicators {
            bottom: -50px;
        }

            .carousel-indicators li, .carousel-indicators li.active {
                width: 10px;
                height: 10px;
                margin: 4px;
                border-radius: 50%;
                border: none;
            }

            .carousel-indicators li {
                background: rgba(0, 0, 0, 0.2);
            }

                .carousel-indicators li.active {
                    background: rgba(0, 0, 0, 0.6);
                }

        .wish-icon {
            position: absolute;
            right: 10px;
            top: 10px;
            z-index: 99;
            cursor: pointer;
            font-size: 16px;
            color: #abb0b8;
        }

            .wish-icon .fa-heart {
                color: #ff6161;
            }

        .star-rating li {
            padding: 0;
        }

        .star-rating i {
            font-size: 14px;
            color: #eb4800;
        }
    </style>
}

<section id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/Image/Book2.jpg" class="d-block w-100" alt="">
        </div>
        <div class="carousel-item">
            <img src="/Image/Book2.jpg" class="d-block w-100" alt="">
            <div class="carousel-caption">
            </div>
        </div>
    </div>
</section>

<section class="main-content">
    <div class="row">
        <div class="col-12 mt-3">
            <h2>Featured <b>Products</b></h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <!-- Single Product -->
                    <div class="col-sm-3">
                        <div class="thumb-wrapper">
                            <span class="wish-icon"><i class="fa fa-heart-o"></i></span>
                            <div class="img-box">
                                <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id"><img style="border: 1px solid #000000; max-width: 140px; width: 146px;" class="bookcover left" alt="Emperor of Rome" src="/Image/@item.ImgFileName" itemprop="image" onerror="javascript:imgErrorBlogRoll(this,120,180);"></a>
                            </div>
                            <div class="thumb-content">
                                <h4><a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">@item.Name</a></h4>
                                <div class="star-rating">
                                    <ul class="list-inline">
                                        <li class="list-inline-item"><i class="fa-regular fa-heart" style="color: #ff2424;"></i></li>
                                        <li class="list-inline-item"><i class="fa-regular fa-heart" style="color: #ff2424;"></i></li>
                                        <li class="list-inline-item"><i class="fa-regular fa-heart" style="color: #ff2424;"></i></li>
                                        <li class="list-inline-item"><i class="fa-regular fa-heart" style="color: #ff2424;"></i></li>
                                        <li class="list-inline-item"><i class="fa fa-star-o"></i></li>
                                    </ul>
                                </div>
                                <p class="item-price"><b>$@item.Price.ToString("N2")</b></p>
                                <a asp-route="addcart" asp-route-productid="@item.Id" class="btn btn-primary">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row feature_box">
        <div class="col-4">
            <div class="service">
                <div class="responsive">
                    <img src="themes/images/feature_img_2.png" alt="">
                    <h4>MODERN <strong>DESIGN</strong></h4>
                    <p>Lorem Ipsum is simply dummy text of the printing and printing industry unknown printer.</p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="service">
                <div class="customize">
                    <img src="themes/images/feature_img_1.png" alt="">
                    <h4>FREE <strong>SHIPPING</strong></h4>
                    <p>Lorem Ipsum is simply dummy text of the printing and printing industry unknown printer.</p>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="service">
                <div class="support">
                    <img src="themes/images/feature_img_3.png" alt="">
                    <h4>24/7 LIVE <strong>SUPPORT</strong></h4>
                    <p>Lorem Ipsum is simply dummy text of the printing and printing industry unknown printer.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".wish-icon i").click(function () {
                $(this).toggleClass("fa-regular fa-solid");
            });
        });
    </script>
}
